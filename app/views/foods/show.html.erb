
<p id="notice"><%= notice %></p>
<section class="hero is-small is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1>Editing Food Item</h1>
    </div>
  </div>
</section>
<div class="hero-body">
  <div class="container">
    <div class="tile is-ancestor">
      <div class="tile is-parent">
        <article class="tile is-child notification is-dark">
          <p>
            <strong>Name:</strong>
            <%= @food.name %>
          </p>

          <p>
            <strong>Section:</strong>
            <%= @food.section.name %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @food.description %>
          </p>

          <p>
            <strong>Allergens:</strong>
            <%= @food.allergens %>
          </p>

          <p>
            <strong>Calories:</strong>
            <%= @food.calories %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @food.price %>
          </p>

          <p>
            <strong>Active:</strong>
            <%= @food.active %>
          </p>

          <p>
            <strong>Image URL:</strong>
            <%= @food.url %>
          </p>
          <div class="container" style="padding-top: 25px;">
            <%= link_to 'Edit', edit_dashboard_food_path(@food) %> |
            <%= link_to 'Back', dashboard_foods_path %>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>


