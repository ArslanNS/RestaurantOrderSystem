<!-- Navbar -->
<section class="hero is-small is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Oaxaca Mexican Food
      </h1>
      <h2 class="subtitle">
        Table Ordering System
      </h2>
    </div>
  </div>
</section>

<!-- Hero content: will be in the middle -->
<div class="hero-body">
  <section class="section">
    <div class="tile is-ancestor">
      <!-- All other tile elements -->
      <div class="tile is-vertical is-2 is-parent">
        <!-- Add content or other tiles -->
        <article class="tile is-child notification is-danger" onclick="location.href='http://www.google.com';" style="cursor: pointer">
          <!-- Create content for Tile here -->
          <p class="title">Request Help tile</p>
          <p class="subtitle">Action button for requesting help.</p>
        </article>
        <article class="tile is-child notification is-warning" onclick="location.href='http://www.google.com';" style="cursor: pointer">
          <!-- Create content for Tile here -->
          <p class="title">Pay Bill</p>
          <p class="subtitle">Action button for paying your bill.</p>
        </article>
        <article class="tile is-child notification is-dark" onclick="location.href='<%= new_user_session_path %>';" style="cursor: pointer">
          <p class="title">Staff Login</p>
          <p class="subtitle">Action button for staff logging in.</p>

          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          <% end %>

        </article>
      </div>
      <div class="tile is-parent">
        <article class="tile is-child notification is-success" onclick="location.href='/menu';" style="cursor: pointer">
          <!-- Create content for Tile here -->
          <p class="title">View Menu and Order tile</p>
          <p class="subtitle">Action button for ordering the food.</p>
        </article>
      </div>
    </div>
  </section>
</div>

<!-- Footer -->
<footer class="footer">
  <div class="content has-text-centered">
    <p>
      <strong>Group 13 Team Project</strong>
    </p>
  </div>
</footer>

