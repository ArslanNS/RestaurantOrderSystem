<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<!-- Navbar -->
<section class="hero is-small is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Oaxaca Mexican Food
      </h1>
      <h2 class="subtitle">
        You're Seated at Table: <%= current_user.table.number %>
      </h2>
      <%= form_with model: @call, url: {controller: "menu", action: "create"}, id: "call-waiter" do |f| %>
        <%= f.hidden_field :table_id, value: current_user.table.id %>
      <% end %>
      <button type="button" class="btn btn-danger btn-lg btn-block" onclick="document.getElementById('call-waiter').submit();">Request Waiter Help</button>
    </div>
  </div>
</section>

<!-- Hero content: will be in the middle -->
<div class="hero-body">
  <div class="container">
    <div class="tile is-ancestor">
        <div class="tile is-parent">
          <article class="food-button tile is-child notification is-light" onclick="location.href='/menu';" style="cursor: pointer">
            <div class="columns">
              <div class="column food-text is-5-desktop is-4-widescreen">
                <p class="title">View Menu and Order</p>
                <p class="subtitle">Dive into our amazing menu.</p>
              </div>
            </div>
          </article>
        </div>
      </div>
  </div>
</div>

