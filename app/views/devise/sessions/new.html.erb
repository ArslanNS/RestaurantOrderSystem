<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <div class="content">
            <h1 class="has-text-white">Log In</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "box"}) do |f| %>
            <div class="field">
              <%= f.label :email, class: "label" %>
              <div class="control has-icons-left">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e.g. johndoe@gmail.com", class: "input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <%= f.label :password, class: "label" %>
              <div class="control has-icons-left">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "*******", class: "input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "checkbox"%>
              </div>
            <% end %>
            <div class="actions field">
              <%= f.submit "Log in", class: "button is-success" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
